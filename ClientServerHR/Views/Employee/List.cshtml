@model DepartmentWithRoleViewModel
@{
    ViewData["Title"] = "Employee List";    
    
}

<h2>@Model.Title</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>            
            <th>Email</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Country</th>
            <th>Department</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var view in Model.Employees)
        {
            <tr>
                <td>
                    @*<a asp-controller="Employee"
                       asp-action="Detail"
                       asp-route-id=@view.Employee.EmployeeId
                       class="link">@view.Employee.EmployeeId</a>*@
                    @view.Employee.EmployeeId
                </td>
                <td>@view.Employee.ApplicationUser.FirstName @view.Employee.ApplicationUser.LastName</td>                
                <td>@view.Employee.ApplicationUser.Email</td>
                <td>@view.Employee.Position</td>
                <td>@view.Employee.Salary.ToString("N2")</td>
                <td>@view.Employee.Country.Name</td>
                <td>
                    @*<a asp-controller="Employee"
                       asp-action="Department"
                       asp-route-department=@view.Employee.Department
                       class="link">@view.Employee.Department</a>*@
                    @view.Employee.Department.Name
                </td>
                <td>@string.Join(", ", view.Roles)</td>
                <td>
                    <a asp-controller="Employee"
                       asp-action="Edit"
                       asp-route-userId="@view.Employee.ApplicationUser.Id"
                       asp-route-viewDepartmentId="@Model.DepartmentId"
                       class="btn btn-sm btn-success">
                        Edit
                    </a>
                    <a asp-controller="Employee"
                       asp-action="Delete"
                       asp-route-userId="@view.Employee.ApplicationUser.Id"
                       asp-route-viewDepartmentId="@Model.DepartmentId"
                       class="btn btn-sm btn-success">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
