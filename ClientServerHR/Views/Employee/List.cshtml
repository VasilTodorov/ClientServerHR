@model List<EmployeeWithRoleViewModel>
@{
    ViewData["Title"] = "Employee List";
}

<h2>Employees</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var view in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Employee"
                       asp-action="Detail"
                       asp-route-id=@view.Employee.EmployeeId
                       class="link">@view.Employee.EmployeeId</a>
                </td>
                <td>@view.Employee.ApplicationUser.FirstName</td>
                <td>@view.Employee.ApplicationUser.LastName</td>
                <td>@view.Employee.ApplicationUser.Email</td>
                <td>@view.Employee.Salary.ToString("N2")</td>
                <td>
                    <a asp-controller="Employee"
                       asp-action="Department"
                       asp-route-department=@view.Employee.Department
                       class="link">@view.Employee.Department</a>
                </td>
                <td>@string.Join(", ", view.Roles)</td>
                <td>
                    <a asp-controller="Employee"
                       asp-action="Profile"
                       asp-route-userId="@view.Employee.ApplicationUser.Id"
                       class="btn btn-sm btn-success">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center mt-4">
    <a asp-controller="Employee" asp-action="HireEmployee" class="btn btn-success btn-lg">
        ➕ Create New Employee
    </a>
</div>