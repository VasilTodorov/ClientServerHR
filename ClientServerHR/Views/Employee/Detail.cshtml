@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Employee Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.EmployeeId</dd>

                <dt class="col-sm-3">FirstName</dt>
                <dd class="col-sm-9">@Model.ApplicationUser.FirstName</dd>

                <dt class="col-sm-3">LastName</dt>
                <dd class="col-sm-9">@Model.ApplicationUser.LastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.ApplicationUser.Email</dd>

                <dt class="col-sm-3">Salary</dt>
                <dd class="col-sm-9">$@Model.Salary.ToString("N2")</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                @*<dt class="col-sm-3">Role</dt>
                @if (Model.ApplicationUser.IsInRole("employee"))
                {
                    <dd class="col-sm-9">employee33</dd>
                }
                else if (User.IsInRole("manager"))
                {
                    <dd class="col-sm-9">manager</dd>
                }
                else if (User.IsInRole("admin"))
                {
                    <dd class="col-sm-9">admin</dd>
                }
                else
                {
                    <dd class="col-sm-9">N/A</dd>
                }*@

            </dl>

            @*<a asp-action="Index" asp-controller="Employee" class="btn btn-secondary mt-3">Back to List</a>*@
        </div>
    </div>
</div>
